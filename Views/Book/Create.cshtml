@model XmlTest.Models.Book

@{
    ViewData["Title"] = "Create Book";
}

<h1>Create Book</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="bookTitle" class="control-label">Title</label>
                <input id="bookTitle" name="bookTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">First Name</label>
                <input name="authorfName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Last Name</label>
                <input name="authorlName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

