@model IEnumerable<XmlTest.Models.Book>

@{
    ViewData["Title"] = "Book";
}
<h1>Books</h1>

<a class="btn btn-default" asp-action="Create">Add a Book</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book Id</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.bookId)</td>
            <td>@Html.DisplayFor(m => item.bookTitle)</td>
            <td>@Html.DisplayFor(m => item.authorfName)</td>
            <td>@Html.DisplayFor(m => item.authorlName)</td>
        </tr>
        }
    </tbody>
</table>
